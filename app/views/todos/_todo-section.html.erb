 <section class="TodoSection">
    <div class="TodoSectionTitle">
        <p class="TodoSectionTitle-text"><%= section_title %></p>
        <p class="TodoSectionTitle-remaingCount"><%= todos.completed.count %>/<%= todos.count %></p>
    </div>

    <ul>
        <% todos.all.each do |todo| %>
            <li classs"TodoItem">
                <label class="TodoItem-container">
                    <%if todo.completed%>
                        <input class"TodoItem-checkbox" type="checkbox" checked />
                        <div class="TodoItem-textStrikked">
                            <%= todo.todo_text %>
                        </div>
                    <%end%>
                    <%if !todo.completed%>
                        <input class"TodoItem-checkbox" type="checkbox" />
                        <div class="TodoItem-text">
                            <%= todo.todo_text %>
                        </div>
                    <%end%>
                    <% if show_due_date %>
                        <p class="TodoItem-dueDate"><%=todo.due_date.to_s(:short)%></p>
                    <% end %>
                    <a href="javascript:void(0)" class="TodoItem-delete">
                        <img src="trashcan.svg" >
                    </a>  
                </label>
            </li>
        <% end %>
    </ul>
</section>